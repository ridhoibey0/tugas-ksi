<% 
const formatCurrency = (amount) => {
  return new Intl.NumberFormat('id-ID', {
    style: 'currency',
    currency: 'IDR',
    minimumFractionDigits: 0
  }).format(amount);
};

const formatDate = (date) => {
  return new Date(date).toLocaleDateString('id-ID', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
};
%>

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Warung POS</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.5/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <style>
    .sidebar-link.active {
      background-color: #dbeafe;
      color: #2563eb;
      border-right: 4px solid #2563eb;
    }
  </style>
</head>
<body class="bg-gray-100">
  <div class="flex h-screen overflow-hidden">
    <%- include('../partials/sidebar', { page }) %>
    
    <main class="flex-1 overflow-y-auto">
      <%- include('../partials/header', { title }) %>
      
      <div class="p-4 md:p-8">
        <!-- Summary Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-6 mb-4 md:mb-6">
          <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
            <div class="text-sm text-gray-600 mb-1">Total Transaksi</div>
            <div class="text-2xl font-bold text-gray-800"><%= summary.total_sales %></div>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
            <div class="text-sm text-gray-600 mb-1">Total Pendapatan</div>
            <div class="text-2xl font-bold text-gray-800"><%= formatCurrency(summary.total_revenue) %></div>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-yellow-500">
            <div class="text-sm text-gray-600 mb-1">Tunai</div>
            <div class="text-2xl font-bold text-gray-800"><%= summary.cash_sales %></div>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-purple-500">
            <div class="text-sm text-gray-600 mb-1">Non-Tunai</div>
            <div class="text-2xl font-bold text-gray-800"><%= summary.non_cash_sales %></div>
          </div>
        </div>
        
        <!-- Filter & Export -->
        <div class="bg-white rounded-lg shadow-md p-4 md:p-6 mb-4 md:mb-6">
          <form method="GET" class="flex flex-col md:flex-row md:flex-wrap md:items-end gap-3 md:gap-4">
            <div class="flex-1 md:min-w-[200px]">
              <label class="block text-sm font-medium text-gray-700 mb-2">Dari Tanggal</label>
              <input type="date" name="start_date" value="<%= start_date %>" 
                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <div class="flex-1 md:min-w-[200px]">
              <label class="block text-sm font-medium text-gray-700 mb-2">Sampai Tanggal</label>
              <input type="date" name="end_date" value="<%= end_date %>" 
                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            
            <div class="flex flex-col sm:flex-row gap-2 w-full md:w-auto">
              <button type="submit" class="w-full sm:flex-1 md:w-auto px-4 md:px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                <i class="fas fa-filter"></i> Filter
              </button>
              <button type="submit" name="export_format" value="csv" 
                      class="w-full sm:flex-1 md:w-auto px-4 md:px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                <i class="fas fa-file-excel"></i> Export CSV
              </button>
            </div>
          </form>
        </div>
        
        <!-- Sales Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="px-4 md:px-6 py-4 border-b">
            <h3 class="text-base md:text-lg font-semibold text-gray-800">Rincian Penjualan</h3>
          </div>
          
          <div class="overflow-x-auto">
            <table class="w-full min-w-[768px]">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">No Invoice</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Tanggal</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Customer</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Total</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Bayar</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Kembali</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Metode</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% sales.forEach(sale => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 text-sm font-medium text-blue-600">
                      <a href="/sales/<%= sale.id %>"><%= sale.invoice_number %></a>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <%= formatDate(sale.created_at) %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <%= sale.customer_name || '-' %>
                    </td>
                    <td class="px-6 py-4 text-sm font-medium text-gray-900">
                      <%= formatCurrency(sale.total_amount) %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <%= formatCurrency(sale.paid_amount) %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <%= formatCurrency(sale.change_amount) %>
                    </td>
                    <td class="px-6 py-4 text-sm">
                      <span class="px-2 py-1 <%= sale.payment_method === 'cash' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %> rounded-full text-xs capitalize">
                        <%= sale.payment_method %>
                      </span>
                    </td>
                  </tr>
                <% }); %>
                
                <% if (sales.length === 0) { %>
                  <tr>
                    <td colspan="7" class="px-6 py-8 text-center text-gray-500">
                      <i class="fas fa-inbox text-4xl mb-2"></i>
                      <p>Tidak ada data penjualan</p>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
