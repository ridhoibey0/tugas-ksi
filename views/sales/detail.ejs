<% 
const formatCurrency = (amount) => {
  return new Intl.NumberFormat('id-ID', {
    style: 'currency',
    currency: 'IDR',
    minimumFractionDigits: 0
  }).format(amount);
};

const formatDate = (date) => {
  return new Date(date).toLocaleDateString('id-ID', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
};
%>

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Warung POS</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.5/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <style>
    .sidebar-link.active {
      background-color: #dbeafe;
      color: #2563eb;
      border-right: 4px solid #2563eb;
    }
    @media print {
      .no-print { display: none; }
    }
  </style>
</head>
<body class="bg-gray-100">
  <div class="flex h-screen overflow-hidden">
    <div class="no-print">
      <%- include('../partials/sidebar', { page }) %>
    </div>
    
    <main class="flex-1 overflow-y-auto">
      <div class="no-print">
        <%- include('../partials/header', { title }) %>
      </div>
      
      <div class="p-4 md:p-8">
        <div class="max-w-4xl mx-auto">
          <div class="bg-white rounded-lg shadow-md p-4 md:p-8">
            <!-- Invoice Header -->
            <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-6 md:mb-8 gap-4">
              <div>
                <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">INVOICE</h1>
                <p class="text-gray-600">Warung Pak Irik</p>
                <p class="text-sm text-gray-500">Sistem Manajemen POS</p>
              </div>
              <div class="text-right">
                <p class="text-2xl font-bold text-blue-600"><%= sale.invoice_number %></p>
                <p class="text-sm text-gray-600 mt-2"><%= formatDate(sale.created_at) %></p>
              </div>
            </div>
            
            <!-- Customer Info -->
            <div class="mb-8 p-4 bg-gray-50 rounded-lg">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-gray-600">Customer</p>
                  <p class="font-medium"><%= sale.customer_name || 'Umum' %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Metode Pembayaran</p>
                  <p class="font-medium capitalize"><%= sale.payment_method %></p>
                </div>
              </div>
            </div>
            
            <!-- Items Table -->
            <table class="w-full mb-8">
              <thead class="border-b-2 border-gray-300">
                <tr>
                  <th class="text-left py-3 px-2">Produk</th>
                  <th class="text-right py-3 px-2">Harga</th>
                  <th class="text-right py-3 px-2">Qty</th>
                  <th class="text-right py-3 px-2">Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <% items.forEach(item => { %>
                  <tr class="border-b border-gray-200">
                    <td class="py-3 px-2">
                      <div class="font-medium"><%= item.name %></div>
                    </td>
                    <td class="text-right py-3 px-2"><%= formatCurrency(item.price) %></td>
                    <td class="text-right py-3 px-2"><%= item.quantity %> <%= item.unit %></td>
                    <td class="text-right py-3 px-2 font-medium"><%= formatCurrency(item.subtotal) %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
            
            <!-- Totals -->
            <div class="flex justify-end mb-8">
              <div class="w-64 space-y-2">
                <div class="flex justify-between text-lg border-t-2 border-gray-300 pt-4">
                  <span class="font-bold">TOTAL:</span>
                  <span class="font-bold text-blue-600"><%= formatCurrency(sale.total_amount) %></span>
                </div>
                <div class="flex justify-between">
                  <span>Bayar:</span>
                  <span><%= formatCurrency(sale.paid_amount) %></span>
                </div>
                <div class="flex justify-between text-lg font-bold text-green-600">
                  <span>Kembali:</span>
                  <span><%= formatCurrency(sale.change_amount) %></span>
                </div>
              </div>
            </div>
            
            <!-- Footer -->
            <div class="text-center text-gray-600 text-sm border-t pt-6">
              <p>Terima kasih atas kunjungan Anda!</p>
              <p class="mt-2">Invoice ini dicetak pada <%= formatDate(new Date()) %></p>
            </div>
            
            <!-- Actions -->
            <div class="flex justify-center space-x-4 mt-8 no-print">
              <button onclick="window.print()" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                <i class="fas fa-print"></i> Print
              </button>
              <a href="/sales" class="px-6 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700">
                <i class="fas fa-arrow-left"></i> Kembali
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>
</html>
